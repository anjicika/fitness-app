# SERVER CONFIGURATION
NODE_ENV=development
PORT=3000
API_VERSION=v1

# DATABASE CONFIGURATION
# Development Database (Docker)
DATABASE_URL=postgresql://user:pass@db:5432/fitnesseri

# Database connection pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT=30000

# AUTHENTICATION
# Generate strong secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Bcrypt rounds (10-12 for production)
BCRYPT_ROUNDS=10

# REDIS CONFIGURATION
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache TTL (Time To Live) in seconds
CACHE_TTL=3600

# AI INTEGRATION
# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=1000

CLAUDE_API_KEY=sk-ant-your-claude-api-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# AI Rate Limiting
AI_RATE_LIMIT_BASIC=10
AI_RATE_LIMIT_PRO=50
AI_RATE_LIMIT_PREMIUM=999999

# EMAIL CONFIGURATION (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

EMAIL_FROM=noreply@fitnesseri.com
EMAIL_FROM_NAME=FitnesERI

# FILE STORAGE (Optional - za later)
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-central-1
AWS_BUCKET_NAME=fitnesseri-uploads

# Cloudinary (alternative)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# CORS CONFIGURATION
CORS_ORIGIN=http://localhost:5173,http://localhost:3001
CORS_CREDENTIALS=true

# RATE LIMITING
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# LOGGING
LOG_LEVEL=debug
LOG_FORMAT=dev

# APPLICATION URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3000

# STRIPE (Optional - za payment later)
STRIPE_SECRET_KEY=sk_test_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret